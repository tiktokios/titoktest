
---
import Button from "@components/ui/button.astro";
import Link from "@components/ui/link.astro";
import { localizePath } from "astro-i18next";
import LanguageSelector from "@components/languageselector.astro";
import { Icon } from "astro-icon/components";
import { t } from "i18next";

export const menuitems = [
 {
    title: "header.tvd",
    path: "/",
  },
  {
    title: "header.tmp3",
    path: "/",
  },
  {
    title: "header.douyin",
    path: "/",
  },
 
];
---

<nav class="absolute inset-x-0 top-0 z-30 mx-auto w-full max-w-screen-md border-gray-100 bg-white/80 py-3 backdrop-blur-lg md:top-4 lg:max-w-screen-xl">
    <div class="px-4">
        <div class="flex items-center justify-between">
            <div class="flex shrink-0">
                <a aria-current="page" class="flex items-center" href="/">
                    <img class="h-7 w-auto" src="/images/logo-tiktokio.webp" alt="Tiktokio logo">
                    <p class="sr-only">{t("header.title")}</p>
                </a>
            </div>
            <div class="hidden md:flex md:items-center md:justify-center md:gap-5">
                <a aria-current="link" class="inline-block rounded-lg px-2 py-1 text-sm font-medium text-gray-900 transition-all duration-200 hover:text-red-600" href="/blog/how-to-save-tiktok-videos-without-watermark">{t("header.howto")}</a>
                <a aria-current="link" class="inline-block rounded-lg px-2 py-1 text-sm font-medium text-gray-900 transition-all duration-200 hover:text-red-600" href="/">{t("header.tvd")}</a>
                <a class="inline-block rounded-lg px-2 py-1 text-sm font-medium text-gray-900 transition-all duration-200 hover:text-red-600" href="/tiktok-story-downloader">{t("header.story")}</a>
                <a class="inline-block rounded-lg px-2 py-1 text-sm font-medium text-gray-900 transition-all duration-200 hover:text-red-600" href="/douyin-downloader">{t("header.douyin")}</a>
            </div>
            <div class="flex items-center justify-end gap-3">

<LanguageSelector showFlag={false} class="hidden items-center justify-center rounded-xl bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 transition-all duration-150 hover:bg-gray-50 sm:inline-flex"/>

                
            </div>
        </div>
    </div>
</nav>
